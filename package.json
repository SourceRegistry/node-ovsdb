{
  "name": "@sourceregistry/node-ovsdb",
  "version": "1.0.1",
  "description": "Open vSwitch Database Management Protocol typescript client",
  "main": "./dist/index.cjs",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SourceRegistry/node-ovsdb.git"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/git": "^10.0.1"
  },
  "keywords": [
    "networking",
    "ovs",
    "Open vSwitch",
    "RFC7047",
    "ISSN2070-1721 "
  ],
  "author": "A.P.A. Slaa (a.p.a.slaa@projectsource.nl)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/SourceRegistry/node-ovsdb/issues"
  },
  "homepage": "https://github.com/SourceRegistry/node-ovsdb#readme",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer"
      ],
      [
        "@semantic-release/release-notes-generator"
      ],
      [
        "@semantic-release/changelog"
      ],
      [
        "@semantic-release/npm"
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "node-ovsdb(release): ðŸš€ ${nextRelease.version} \n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
